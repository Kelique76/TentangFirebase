<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelique.allnewfireapp.activity.FireChat.FireChatActivity">

    <ListView
        android:id="@+id/wadah_chat"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"></ListView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">
        <ImageView
            android:id="@+id/wadah_kirim_Gbr"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/chat_fab"
            android:background="@drawable/circlebackgroundgreen"
            android:src="@drawable/ic_attach_file_black_24dp"/>



        <android.support.design.widget.TextInputEditText
            android:id="@+id/chat_papan"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/chat_fab"
            android:background="@drawable/bungkus"
            android:paddingLeft="10dp"
            android:hint="Pesan saya...">



        </android.support.design.widget.TextInputEditText>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/chat_fab"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ic_chat_bubble_outline_black_24dp"/>


    </LinearLayout>

</RelativeLayout>
