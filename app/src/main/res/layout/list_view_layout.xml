<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e7e2e2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.jackandphantom.circularimageview.CircleImage
        android:paddingLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:border_width="2dp"
        app:border_color="#e9e3e3"
        app:add_shadow="true"
        app:shadow_color="#ec8383"
        android:id="@+id/circleImage"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txtNamaTeman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teman"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtStatusTeman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNamaTeman"
            android:paddingTop="5sp"
            android:text="Status"/>

        <TextView
            android:id="@+id/txtAlamTmn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNamaTeman"
            android:paddingTop="5dp"
            android:text="Alamat"/>
</LinearLayout>

</LinearLayout>