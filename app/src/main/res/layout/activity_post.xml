<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelique.allnewfireapp.activity.FireBlog.PostActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/add_btn"
        android:id="@+id/imgButton"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wadahJudul"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bungkus_garis"
        android:layout_below="@+id/imgButton">

        <EditText
            android:id="@+id/judulBrita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tuliskan Judul"
            android:paddingLeft="25dp"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:id="@+id/wadahIsiBrita"
        android:background="@drawable/bungkus_garis"
        android:layout_below="@+id/wadahJudul">

        <EditText
            android:id="@+id/isiBrita"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:hint="Tuliskan Isi Berita"
            android:paddingLeft="25dp"
            android:singleLine="false"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnPost"
        android:background="@drawable/bungkus_gradient"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/wadahIsiBrita"
        android:layout_marginTop="19dp"
        android:text="POSTKAN BERITA"/>
</RelativeLayout>
